<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

    <include layout="@layout/view_toolbar"/>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ui.profile.EditProfileActivity">

            <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:elevation="12dp"
                    android:id="@+id/view2"
                    app:cardCornerRadius="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">
                <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:id="@+id/profile_avatar"
                        android:scaleType="centerCrop"/>

                <Button android:background="#55000000"
                        android:textSize="10sp"
                        android:textColor="#ffffff"
                        android:text="Править"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom"/>
            </android.support.v7.widget.CardView>

            <com.rengwuxian.materialedittext.MaterialEditText
                    app:met_floatingLabelPadding="4dp"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabel="normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/field_fio" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/view2"
                    android:layout_marginStart="32dp" android:textSize="16sp" android:hint="ФИО"
                    android:textColor="#9299a2"
                    android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:singleLine="true"
                    app:layout_constraintTop_toTopOf="parent"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                    app:met_floatingLabelPadding="4dp"
                    app:met_floatingLabel="normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/field_birth_date"
                    app:layout_constraintTop_toBottomOf="@+id/field_fio" app:layout_constraintStart_toEndOf="@+id/view2"
                    android:layout_marginStart="32dp" android:textSize="16sp" android:hint="Дата рождения"
                    android:textColor="#9299a2" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:singleLine="true"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                    app:met_floatingLabelPadding="4dp"
                    android:paddingBottom="16dp"
                    app:met_floatingLabel="normal"
                    app:met_hideUnderline="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/field_summary"
                    app:layout_constraintTop_toBottomOf="@+id/field_birth_date"
                    android:textSize="16sp" android:hint="Пара слов о себе"
                    android:textColor="#9299a2" android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" android:singleLine="false"/>
            <android.support.v7.widget.RecyclerView
                    android:overScrollMode="never"
                    android:id="@+id/profile_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/field_summary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            />
            <Button
                    android:backgroundTint="#ffffff"
                    android:text="Отменить"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button4"
                    app:layout_constraintEnd_toStartOf="@+id/button5"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_recycler"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
            <Button
                    android:textColor="#ffffff"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Сохранить"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/button4" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/profile_recycler"
                    android:layout_marginBottom="16dp"/>


        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>