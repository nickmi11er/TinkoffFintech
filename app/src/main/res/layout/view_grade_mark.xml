<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/taskName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            tools:text="Домашнее задание. Основные Компоненты"
            android:textColor="@color/colorTextMain"
            app:layout_constraintTop_toTopOf="@+id/gradeMark"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/gradeMark"/>

    <ru.nickmiller.tinkofffintech.ui.component.MarkView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gradeMark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gradeStatus"
            android:textSize="12sp"
            android:textColor="@color/colorTextSecondary"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taskName"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Статус: на проверке"/>

</android.support.constraint.ConstraintLayout>