<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

    <android.support.constraint.ConstraintLayout
            android:background="@color/colorBlueSoft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/headerContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <TextView
                android:id="@+id/eventTitle"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                tools:text="Спецкурс 'Работа с базами данных'"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/eventType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

        <TextView
                android:textAllCaps="true"
                android:textColor="#aaffffff"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventType"
                tools:text="Спецкурс"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventDate"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="14sp"
                android:textColor="#aaffffff"
                tools:text="30.10 - 11.12"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/eventPlace"
                app:layout_constraintTop_toBottomOf="@+id/eventTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:textColor="#aaffffff"
                tools:text="МГУ им. Ломоносова"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:textSize="12sp"/>

    </android.support.constraint.ConstraintLayout>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/eventDescription"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            tools:text="Научим проектировать хранилища данных, анализировать и визуализировать основные бизнес-показатели проекта, формировать быстрый доступ к срезам данных для разных продуктов. Спецкурс из 6 лекций и домашних работ прочитают выпускники ВМК МГУ, ведущие техлиды. Выпускники получат сертификат о прохождении курса, топ-10 подарим сувениры от Tinkoff.ru и предложим пройти финальный этап собеседования на вакансию аналитика хранилища с занятостью от 20 часов в неделю."
            android:textColor="@color/colorTextSecondary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/headerContainer"/>

</android.support.constraint.ConstraintLayout>