<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#4f5b70"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventBlockTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorRedSoft"
                tools:text="Android"
                android:textAllCaps="false"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventBlockSubtitle"
                app:layout_constraintTop_toBottomOf="@+id/eventBlockTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                tools:text="Москва"
                android:layout_marginTop="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/eventBlockAbout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/eventBlockSubtitle"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                tools:text="Курс читают совместно более пяти преподавателей."/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/eventBlockDescription"
                app:layout_constraintTop_toBottomOf="@+id/eventBlockAbout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="8dp"
                tools:text="Познакомим с языком разработки Kotlin и архитектурой Android-приложений.  Расскажем практические тонкости программирования под Android и поможем выпустить своё первое приложение в рамках курса."
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>
        <TextView
                android:padding="8dp"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventBlockBtn"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:textColor="@color/colorPrimary"
                tools:text="Прочитать про курс"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/eventBlockTitle"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>